# Local development (npm run dev with docker-compose.infra.yml)
NODE_ENV=development
PORT=3001
MONGODB_URI=mongodb://auction:dev-mongo-password@localhost:27017/auction?replicaSet=rs0&authSource=admin
REDIS_URL=redis://:dev-redis-password@localhost:6379
JWT_SECRET=dev-jwt-secret-min-16-chars
CORS_ORIGIN=http://localhost:5173

# Production (docker-compose.yml) - uncomment and configure
# NODE_ENV=production
# PORT=3001
# MONGODB_URI is overridden by docker-compose.yml
# REDIS_URL is overridden by docker-compose.yml
# JWT_SECRET=your-secure-production-jwt-secret
# CORS_ORIGIN=https://your-domain.com
