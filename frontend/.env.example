# Local development (npm run dev)
VITE_API_URL=http://localhost:4000/api
VITE_SOCKET_URL=http://localhost:4000

# Telegram Bot username (without @) for Login Widget
VITE_BOT_USERNAME=your_bot_username

# Set to 'true' to enable HTTPS (required for Telegram Mini App on localhost)
# After enabling, configure https://127.0.0.1:5173 in @BotFather with /setdomain
VITE_USE_HTTPS=false

# Production (docker-compose) - nginx proxies to backend
# VITE_API_URL=/api
# VITE_SOCKET_URL=
# VITE_BOT_USERNAME=your_bot_username
