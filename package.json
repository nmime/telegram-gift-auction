{
  "name": "telegram-gift-auction",
  "version": "1.0.0",
  "description": "Multi-round auction system inspired by Telegram Gift Auctions",
  "private": true,
  "scripts": {
    "dev": "concurrently \"pnpm dev:backend\" \"pnpm dev:frontend\"",
    "dev:backend": "pnpm --filter backend start:dev",
    "dev:frontend": "pnpm --filter frontend dev",
    "build": "pnpm --filter backend build && pnpm --filter frontend build",
    "start": "pnpm --filter backend start:prod",
    "test": "pnpm --filter backend test",
    "test:e2e": "pnpm --filter backend test:e2e",
    "lint": "pnpm -r lint"
  },
  "devDependencies": {
    "concurrently": "^9.2.1",
    "vite-plugin-mkcert": "^1.17.9"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "packageManager": "pnpm@10.28.0"
}
